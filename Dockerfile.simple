# Simple Dockerfile using pre-compiled binary
FROM debian:bookworm-slim

# Copy the pre-compiled binary
COPY coreburner /app/coreburner

# Copy scripts and documentation
COPY *.sh /app/
COPY *.md /app/

WORKDIR /app

# Make binary and scripts executable
RUN chmod +x /app/coreburner /app/*.sh

# Create log directory
RUN mkdir -p /app/log

# Default command
ENTRYPOINT ["/app/coreburner"]
CMD ["--help"]
